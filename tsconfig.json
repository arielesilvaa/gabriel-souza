{
  "compilerOptions": {
    "target": "es5", // Definir o alvo da compilação para ES5
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Incluir bibliotecas necessárias
    "allowJs": true, // Permitir arquivos JS junto com TypeScript
    "skipLibCheck": true, // Pular verificação de tipos nas bibliotecas
    "esModuleInterop": true, // Garantir compatibilidade com módulos ES
    "allowSyntheticDefaultImports": true, // Permitir importações de padrão sintético
    "strict": true, // Habilitar checagem estrita de tipos
    "forceConsistentCasingInFileNames": true, // Garantir consistência no uso de maiúsculas e minúsculas
    "module": "esnext", // Usar ES Modules
    "moduleResolution": "node", // Definir resolução de módulos como Node.js
    "resolveJsonModule": true, // Permitir importação de arquivos JSON
    "noEmit": true, // Não gerar arquivos de saída
    "jsx": "preserve" // Usar o novo transformador JSX do React 17
    ,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts", // Arquivo gerado automaticamente pelo Next.js para tipos do Next.js
    "**/*.tsx", // Incluir todos os arquivos .ts
    "next-env.d.ts" // Incluir todos os arquivos .tsx
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules" // Excluir node_modules
  ]
}
